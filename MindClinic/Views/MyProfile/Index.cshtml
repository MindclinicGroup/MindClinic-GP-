@model MindClinic.Models.User

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background: #b0c4de
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #b0c4de
    }

    .profile-button {
        background: #b0c4de;
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #b0c4de
        }

        .profile-button:focus {
            background: #b0c4de;
            box-shadow: none
        }

        .profile-button:active {
            background: #b0c4de;
            box-shadow: none
        }

    .back:hover {
        color: #b0c4de;
        cursor: pointer
    }

    .labels {
        font-size: 11px
    }

    .add-experience:hover {
        background: #b0c4de;
        color: #fff;
        cursor: pointer;
        border: solid 1px #b0c4de
    }
</style>


<div class="container rounded bg-white mt-5 mb-5">
    <form asp-action="Index" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="~/Doctorsimage/@(Model.image?? "Default.jpg")"><span class="font-weight-bold">@Html.DisplayFor(model => model.Name)</span><span class="text-black-50">@Html.DisplayFor(model => model.Email)</span><span> </span></div>  <div>
                    <div class="text-center"><a asp-controller="MyProfile" asp-action="ChangePassword" class="btn btn-primary"> Change password</a></div>
                </div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control" placeholder="first name" disabled value="@Html.DisplayFor(model => model.Name)"></div>
                        <div class="col-md-6"><label class="labels">Gender</label><input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Gender)" placeholder="surname"></div>
                        <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder="enter email id" disabled value="@Html.DisplayFor(model => model.UserName)"></div>

                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="enter phone number" name="phoneNumber" id="phoneNumber" value="@Html.DisplayFor(model => model.PhoneNumber)"></div>
                        <div class="col-md-12"><label class="labels">Age</label><input type="text" class="form-control" name="age" id="age" value="@Html.DisplayFor(model => model.Age)"></div>
                        <div class="col-md-12"><label class="labels">Change Profile Picture</label><input type="file" class="form-control" name="Img" id="Img" value=""></div>

                    </div>

                    <div class="mt-5 text-center"><button class="btn btn-primary " type="submit" value="Save">Save</button></div>
                </div>
            </div>
        </div>
    </form>
</div>
