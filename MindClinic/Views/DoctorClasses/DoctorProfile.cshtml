@model MindClinic.Models.DoctorClass
@{
    Layout = "_LayoutDoctotDashboard";
}

<form asp-action="DoctorProfile">
    <h4 class="card-title">About Me</h4>
    <div class="form-group mb-0">
        <textarea class="form-control" asp-for="AboutMe" rows="5"> </textarea>
        <span asp-validation-for="AboutMe" class="text-danger"></span>
    </div>
    <br />
    <h4 class="card-title">Pricing</h4>
    <div class="row custom_price_cont" id="custom_price_cont" style="">
        <div class="col-md-4">

            <input asp-for="pricePerSession" class="form-control" />
            <span asp-validation-for="pricePerSession" class="text-danger"></span>
        </div>
        <div class="col-6"></div>
        <div class="col-2 text-right"> <input type="submit" value="Save" class="btn btn-primary" /></div>
    </div>
</form>
<br/>
<div id="education"></div>
<div class="text-right"><button style="padding:5px;" class="btn btn-info" id="createEdu">add more</button></div>
<div id="awards"></div>
<div class="text-right"><button style="padding:5px;" class="btn btn-info" id="createAwards">add more</button></div>



<script>
    $(document).ready(function () {

        $.ajax({
            method: 'GET',
            url: '/DoctorClasses/DoctorEducation',
            success: function (response) {
                $("#education").html(response);

            }
        });

    });

</script>
<script>
    $(document).ready(function () {

        $("#createEdu").click(function () {
            $.ajax({
                method: 'GET',
                url: '/DoctorClasses/DoctorEducation?create=true',

                success: function (response) {
                    $("#education").html(response);

                }
            });

        });




    });

</script>
<script>
    $(document).ready(function () {

        $.ajax({
            method: 'GET',
            url: '/DoctorClasses/DoctorAwards',
            success: function (response) {
                $("#awards").html(response);

            }
        });

    });

</script>
<script>
    $(document).ready(function () {

        $("#createAwards").click(function () {
            $.ajax({
                method: 'GET',
                url: '/DoctorClasses/DoctorAwards?create=true',
                success: function (response) {
                    $("#awards").html(response);

                }
            });
        });

    });

</script>