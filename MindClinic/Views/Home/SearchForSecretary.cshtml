@model IEnumerable<MindClinic.Models.User>
@{
    ViewData["Title"] = "SearchForSecretary";
}
<div class="row">
    <div class=" col-2">
        <form asp-action="SearchForDoctors" method="get">
            <div class="form-actions no-color">
                <div style="padding-top:20px" class="input-group mb-3">
                    <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search for ..">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                </div>
                @*<p>
                        Find by name: <input type="text" value="@ViewData["CurrentFilter"]" />
                        <input type="submit" value="Search" class="btn btn-default" /> |
                        <a asp-action="SearchForDoctors">Back to Full List</a>
                    </p>*@
            </div>
            <div>
                <div class="row">
                    <a asp-action="SearchForSecretary" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="name"> Name</a>
                </div>
                <div class="row">
                    <a asp-action="SearchForSecretary" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="age"> Age</a>
                </div>
                <div class="row">
                    <a asp-action="SearchForSecretary" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="Male"> Male Doctors</a>
                </div>
                <div class="row">
                    <a asp-action="SearchForSecretary" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="Female"> Female Doctors</a>
                </div>

                <a asp-action="SearchForSecretary">Reset</a>
            </div>
        </form>
    </div>
    <div class="col-10">
        <div class="row">
            @foreach (var item in Model)
            {
                <!-- Doctor Widget -->

                <div class="profile-widget col-3" width="400" height="450">
                    <div class="doc-img ">

                        <a href="doctor-profile.html">
                            <img width="300" height="200" alt="User Image" src="~/Doctorsimage/@(item.image?? "Default.jpg")">
                        </a>

                        <a href="javascript:void(0)" class="fav-btn">
                            <i class="far fa-bookmark"></i>
                        </a>
                    </div>
                    <div class="pro-content">
                        <h3 class="title">
                            <a >@item.Name</a>
                            <i class="fas fa-check-circle verified"></i>
                        </h3>
                        
                        <ul class="available-info">
                            <li>
                                <i class="fas fa-map-marker-alt"></i> @item.Gender
                            </li>
                            <li>
                                <i class="far fa-clock"></i> @item.Age
                            </li>
                        </ul>
                        <form method="post" role="form">
                        <div class="row row-sm">
                            <div class="col-6">
                                <input  type="text" class="form-control" name="Msg" id="Msg" placeholder="Write a Meesage to a secretary">
                                <input type="number" class="form-control" name="salary" id="salary" placeholder="Salary" >
                                <button type="submit" asp-action="WorkWithMe" asp-controller="Home" asp-route-id="@item.Id" class="btn book-btn">Work With Me</button>
                            </div>
                        </div>
                        </form>
                    </div>

                </div>}
        </div>
    </div>
</div>
