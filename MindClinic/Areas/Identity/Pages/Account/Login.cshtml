                    </p>*@
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
								<!-- /Form -->
								
								<div class="text-center forgotpass"><a id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a></div>
								<div class="login-or">
